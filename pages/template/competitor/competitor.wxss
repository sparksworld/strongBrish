.bigContent{
    width: 100%;
    height: 100%;
    position: absolute;
    transition: transform 1s;
    z-index: 1;
    box-shadow: 0rpx 10rpx 10rpx #888888;
}
.opponentGrades{
    position: absolute;
    top: 300rpx;
    left: 30rpx;
}
.particulars{
    position: absolute;
    bottom: 300rpx;
    right: 30rpx;
}

.particulars image, .fight .opponentGrades image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}
.particulars,.fight .opponentGrades{
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-direction: column;
}